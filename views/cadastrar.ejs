<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Produtos</title>
    <%- include ("partials/header.ejs") %>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <style>
            .container-imagem {
                width: 100%;
                height: 500px;
                overflow: hidden;
                display: flex;
                justify-content: center;
                align-items: center;
                border: 1px solid #ddd;
                border-radius: 8px;
            }

            .imagem {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 8px;
            }

            /*
        .imagem {
            display: block;
            margin-left: auto;
            margin-right: auto;
            max-width: 100%;
            height: 100%;
            height: auto;
            overflow: hidden;
        }
*/
            body {
                background-color: #E9D8B7;
            }

            @media (max-width: 768px) {
                .col-4 {
                    flex: 1 1 100%;
                    max-width: 100%;
                }

                .col-6 {
                    flex: 1 1 100%;
                    max-width: 100%;
                }
            }
        </style>
</head>

<body>
    <%- include ("partials/navbar.ejs") %>
        <div class="container mt-5">
            <div class="row">
                <div class="imagem-showcase col-6 container-fluid">
                    <div class="container-imagem" style="margin: auto;">
                        <img id="preview" class="imagem" alt="Ocorreu um erro ao carregar a imagem!" src=""
                            height="100%" width="100%" hidden>
                    </div>
                </div>
                <div class="container-fluid col-6 " style="margin-top: 2%;">
                    <form method="POST" action="/cadastrarProduto">
                        <h3>Cadastrar Produto</h3>
                        <br><input type="text" name="nome" placeholder="Digite o nome" class="form-control">
                        <br><textarea placeholder="Digite a descrição" class="form-control" name="descricao"></textarea>
                        <br><input type="number" name="preco" placeholder="Digite o preço" class="form-control">
                        <br><input type="text" class="form-control" name="imagemUrl"
                            placeholder="Cole o URL da imagem aqui" onchange="previewImageUrl()">
                        <br><button type="submit" class="btn btn-success">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
</body>
<%- include ("partials/footer.ejs") %>

    <script>
        function previewImageUrl() {
            let preview = document.querySelector("#preview");
            let imageUrl = document.querySelector('input[name=imagemUrl]').value;
            console.log("Carregando preview da URL!");

            if (imageUrl) {
                preview.src = imageUrl;
                preview.hidden = false;
            } else {
                preview.src = "";
            }
        }
    </script>

</html>
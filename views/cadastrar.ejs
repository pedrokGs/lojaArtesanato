<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Produtos</title>
    <%- include ("partials/header.ejs") %>

        <style>
            img {
                display: block;
                margin-left: auto;
                margin-right: auto;
                width: 100%;
                height: 100%;
            }
        </style>
</head>

<body>
    <%- include ("partials/navbar.ejs") %>
        <div class="container" style="padding: 5%;">
            <div class="row">
                <div class="container-fluid col-6 " style="margin-top: 2%;">
                    <form method="POST" action="/cadastrarProduto">
                        <h3>Cadastrar Produto</h3>
                        <br><input type="text" name="nome" placeholder="Digite o nome" class="form-control">
                        <br><textarea placeholder="Digite a descrição" class="form-control" name="descricao"></textarea>
                        <br><input type="number" name="preco" placeholder="Digite o preço" class="form-control">
                        <br><input type="file" class="form-control" name="imagem" placeholder="Envie uma imagem"
                            onchange="previewImage()">
                        <br><button type="submit" class="btn btn-success">Cadastrar</button>
                    </form>
                </div>

                <div class="imagem-showcase col-4 container-fluid">
                    <div class="container-imagem"
                        style="background-color: rgb(226, 226, 226); margin: auto;">
                        <img id="preview" alt="Sua imagem aqui!" src="">
                    </div>
                </div>
            </div>
        </div>
</body>
<%- include ("partials/footer.ejs") %>

    <script>
        function previewImage() {
            let preview = document.querySelector("img");
            var file = document.querySelector('input[type=file]').files[0];
            console.log("Carregando preview!");

            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "";
            }
        }

    </script>

</html>
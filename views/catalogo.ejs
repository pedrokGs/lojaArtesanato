<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include ("partials/header.ejs") %>
    <style>
        a {
            text-decoration: none;
            color: black;
        }

        .container-item {
            margin: 20px 0;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .container-item:hover {
            transform: scale(1.05);
        }

        .item-info h3 {
            margin: 10px 0 0;
            font-size: 1.2em;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .col-4 {
            flex: 1 1 calc(33.333% - 20px);
            box-sizing: border-box;
        }

        img {
            border-radius: 8px;
        }
    </style>
</head>

<body>
    <%- include ("partials/navbar.ejs") %>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Cat√°logo</h1>
            </div>
        </div>
        <div class="row">
            <% produtos.forEach(produto => { %>
                <div class="col-4">
                    <a href="/catalogo/<%= produto.id %>">
                        <div class="container-item">
                            <div class="container">
                                <img src="<%= produto.imagemUrl %>" alt="" height="250px" width="100%">
                                <br>
                                <div class="item-info" style="margin-top: 10%;">
                                    <h3>
                                        <%= produto.nome %> | R$<span style="color: green;"><%= produto.preco %></span>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>

</body>
<%- include ("partials/footer.ejs") %>

</html>